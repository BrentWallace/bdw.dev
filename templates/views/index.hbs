  <div class="container-fluid bg-info">
    <button type="button" class="btn btn-block btn-lg btn-info p-4" data-toggle="modal" data-target="#contactModal">
      Contact Me
    </button>
  </div>
  <!--modal content-->
  <div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="contactModalLabel">Contact Me</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>
            Let me know how I can help you!
          </p>
          <form action="/contact_handler/" method="POST">
            <input type="hidden" id="g-recaptcha-token" name="recaptcha" value="" />
            <div class="form-group">
              <label for="inputEmail">Email address</label>
              <input type="email" class="form-control" name="inputEmail" id="inputEmail" aria-describedby="emailHelp">
              <small id="emailHelp" class="form-text text-muted">I'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <label for="inputMessage">Message</label>
              <textarea type="" class="form-control" name="inputMessage" id="inputMessage" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-info" id="contactSubmit">Send</button>
            <p class="mt-4 alert-success" id="response"></p>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!--scripts-->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
  <script src="https://www.google.com/recaptcha/api.js?render=6LdpvdMUAAAAAHX6OW7sI30uZwmvWRovv8pwjPid"></script>
  <script>
    grecaptcha.ready(function () {
      grecaptcha.execute('6LdpvdMUAAAAAHX6OW7sI30uZwmvWRovv8pwjPid', { action: 'contact' }).then(function (token) {
        document.getElementById('g-recaptcha-token').value=token;
    });
});
  </script>
  <script type="text/javascript">
    $(document).ready(function () {
      $('.nav-item').click(function() {
        $('.nav-item').each(function() {
          $(this).removeClass('active');
        });
        $(this).toggleClass('active');
      });
      
      $('#contactSubmit').click(function () {
        event.preventDefault();
        var inputEmail = $('#inputEmail').val();
        var inputMessage = $('#inputMessage').val();
        var recaptcha = $('#g-recaptcha-token').val();
        var request = $.ajax({
          method: 'POST',
          url: '/contact_handler',
          data: {
            inputEmail: inputEmail,
            inputMessage: inputMessage,
            recaptcha: recaptcha,
          },

        });
        request.done(function (msg) {
          $('#response').removeClass('alert-danger p-4').addClass('alert-success p-4').html(msg);
        });

        request.fail(function (jqXHR, textStatus) {
          $('#response').removeClass('alert-success p-4').addClass('alert-danger p-4').html('Request Failed: ' + textStatus);
        })
      });
    });
  </script>
</body>

